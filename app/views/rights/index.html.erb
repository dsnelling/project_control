<h1>Rights</h1>

<table>
 <tr class="list-header">
   <th>id</th>
   <th>name</th>
   <th>controller</th>
   <th>action</th>
   <th>Action?</th>
 </tr>

<% @rights.each do |right| %>
  <tr class="<%= cycle('list-line-odd', 'list-line-even') %>">
    <td><%=h right.id %></td>
    <td><%=h right.name %></td>
    <td><%=h right.controller %></td>
    <td><%=h right.action %></td>
	<td><%= link_to 'Show', right %> |
	  <%= link_to 'Edit', edit_right_path(right) %> |
	  <%= link_to 'Destroy', right, :confirm => 'Are you sure?',
	     :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />
<%= link_to 'New Right', new_right_path %> |
<%= link_to 'Allocate Rights to Roles', roles_rights_path %> |
<%= link_to 'Back to Users', users_url %>

