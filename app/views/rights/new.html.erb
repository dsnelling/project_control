<h1>New right</h1>
<table>
<% form_for(@right) do |f| %>
  <%= f.error_messages %>
  <tr>
    <td><%= f.label :name %></td>
	<td><%= f.text_field :name %></td>
  </tr>
  <tr>
    <td><%= f.label :controller %></td>
	<td><%= f.text_field :controller %></td>
  </tr>
  <tr>
    <td><%= f.label :action %></td>
	<td><%= f.text_field :action %></td>
  </tr>
  <tr>
    <td>&nbsp;</td>
	<td><%= f.submit 'Create' %></td>
  </tr>
<% end %>
</table>

<%= link_to 'Back', rights_path %>


