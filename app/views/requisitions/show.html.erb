<% # lets try to use some CSS to make this look good -%>
<div id="form-leftcolumn">
  <div class="form-row-1-label"><%= t 'req.req_ref' %>:</div>
  <div class="form-row-1-data"><%=h @requisition.req_num %></div>
  <div class="form-row-1-label"><%= t 'req.commodity' %>:</div>
  <div class="form-row-1-data"><%=h @requisition.commodity %> </div>
  <div class="form-row-1-label"><%= t 'req.scope' %>:</div>
  <div class="form-row-1-data"><%=h display_req_scope(@requisition.scope)
      %>&nbsp;</div>
  <div class="form-row-1-label"><%= t 'req.status' %>:</div>
  <div class="form-row-1-data"><%=h display_req_status(@requisition.status)
      %>&nbsp;</div>
  <div class="form-row-1-label"><%= t 'req.mr_doc' %>:</div>
  <div class="form-row-1-data"><%=h @requisition.mr_doc %>&nbsp;</div>
  <% if @view_costs %>
    <div class="form-row-1-label"><%= t 'req.budget' %>:</div>
    <div class="form-row-1-data">
	   <%=h number_to_currency(@requisition.budget_rmb, :unit => "RMB") %>&nbsp;
    </div>
  <% end %>
</div>
<div id="form-rightcolumn">
  <div class="form-row-1-label"><%= t 'req.ros_date' %>:</div>
  <div class="form-row-1-data">
	    <%=h @requisition.required_on_site %>&nbsp;</div>
  <div class="form-row-1-label"><%= t 'req.rpo_date' %>:</div>
  <div class="form-row-1-data">
	    <%=h @requisition.required_contract %>&nbsp;</div>
  <div class="form-row-1-label"><%= t 'req.bid_applic' %>:</div>
  <div class="form-row-1-data"><%=h @requisition.bid_applic_approved %></div>
  <div class="form-row-1-label"><%= t 'req.enq_issue' %>:</div>
  <div class="form-row-1-data"><%=h @requisition.enquiry_issued %>&nbsp;</div>
  <div class="form-row-1-label"><%= t 'req.tbt_issue' %>:</div>
  <div class="form-row-1-data"><%=h @requisition.tbt_issued %>&nbsp;</div>
  <div class="form-row-1-label"><%= t 'req.cbt_issue' %>:</div>
  <div class="form-row-1-data"><%=h @requisition.cbt_issued %>&nbsp;</div>
  <div class="form-row-1-label"><%= t 'update_by' %>:</div>
  <div class="form-row-1-data"><%=h @requisition.update_by %>&nbsp;</div>
</div>
<br />

<div id="req-contracts">
<%= link_to t('req.edit_req'), edit_requisition_path(@requisition) %>
  <% unless @requisition.contracts.empty? %>
   <!-- contracts for this requisition -->
    <%= render :partial => "/contracts/contract_header" %>
    <%= render :partial => "/contracts/contract",
     :collection => @requisition.contracts.sort_by {|c| c.reference } %>
    <%= render :partial => "/contracts/contract_footer" %>
  <% end %>
<%= link_to t('req.new_contract'),
          new_requisition_contract_url(@requisition, :commodity => @requisition.commodity)  %>
</div>


<div id="req-documents">
<h3>Documents for this Requisition:</h3>
<table class="list-table">
  <tr>
    <th class="list-header"><%= t('proc_doc.category') %></th>
	<th class="list-header"><%= t('proc_doc.source') %></th>
	<th class="list-header"><%= t('proc_doc.document') %></th>
	<th class="list-header"><%= t('proc_doc.remarks') %></th>
	<th class="list-header"><%= t('action') %></th>
  </tr>
  <% unless @requisition.procurement_docs.empty? %>
    <%= render :partial => "procurement_docs/procurement_doc",
	  :collection  => @requisition.procurement_docs %>
	<% end%>
  </table>
  <%= link_to t('proc_doc.new'),
    new_requisition_procurement_doc_url(@requisition) %>
</div>
<br />
  <% unless @requisition.req_comments.empty? %>
    <!-- comments against this requisition -->
    <h3><%= t 'req.comment_header' %></h3>
    <%= render :partial => "/req_comments/comment", 
       :collection => @requisition.req_comments %>
  <% end %>
</div>

<div id="form-navigation">
  <%= link_to t('req.new_comment'), new_requisition_req_comment_url(@requisition) %> |
   <%= link_to t('req.back'), requisitions_path %>
</div>

