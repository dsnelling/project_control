<h1>New contract</h1>

<% form_for([@requisition,@contract]) do |f| %>
  <%= f.error_messages %>
<table>
  <tr>
    <td><%= f.label :commodity %></td>
    <td><%= f.text_field :commodity %></td>
  </tr>
  <tr>
    <td><%= f.label :reference %></td>
    <td><%= f.text_field :reference %></td>
  </tr>
  <tr>
    <td><%= f.label :commence_date %></td>
    <td><%= f.calendar_date_select :commence_date %></td>
  </tr>
  <tr>
    <td><%= f.label :supplier %></td>
    <td><%= f.text_field :supplier %></td>
  </tr>
  <tr>
    <td><%= f.label :currency %></td>
	<td><%= f.select :currency, Contract::CURRENCY_TYPES %></td>
  </tr>
  <tr>
    <td><%= f.label :value_orig %></td>
    <td><%= f.text_field :value_orig %></td>
  </tr>
  <tr>
    <td><%= f.label :value_current %></td>
    <td><%= f.text_field :value_current %></td>
  </tr>
  <tr>
    <td><%= f.label :delivery_terms %></td>
    <td><%= f.text_field :delivery_terms %></td>
  </tr>
  <tr>
    <td><%= f.label :delivery_date_contract %></td>
    <td><%= f.calendar_date_select :delivery_date_contract %></td>
  </tr>
  <tr>
    <td><%= f.label :delivery_date_forecast %></td>
    <td><%= f.calendar_date_select :delivery_date_forecast %></td>
  </tr>
  <tr>
    <td><%= f.label :expedite_contract %></td>
    <td><%= f.text_field :expedite_contract %></td>
  </tr>
  <tr>
    <td><%= f.label :expedite_email %></td>
    <td><%= f.text_field :expedite_email %></td>
  </tr>
  <tr>
    <td><%= f.label :expedite_phone %></td>
    <td><%= f.text_field :expedite_phone %></td>
  </tr>
  <tr>
    <td><%= f.label :expedite_last_contact %></td>
    <td><%= f.date_select :expedite_last_contact, :include_blank => true %></td>
  </tr>
  <tr>
    <td><%= f.label :expedite_status %></td>
    <td><%= f.select :expedite_status, Contract::EXPEDITE_STATUS_TYPES %></td>
  </tr>
  <tr>
    <td colspan="2"><%= f.submit 'Create' %></td>
  </tr>
</table>
<% end %>

<%= link_to 'Back', requisition_path(@requisition) %>
