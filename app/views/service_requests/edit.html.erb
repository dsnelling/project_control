<h1>Editing service_request</h1>

<% form_for(@service_request) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :project %><br />
    <%= f.select :project, @projects %>
  </p>
  <p>
    <%= f.label :request_ref %><br />
    <%= f.text_field :request_ref %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.label :disclipline %><br />
    <%= f.text_field :disclipline %>
  </p>
  <p>
    <%= f.label :status %><br />
    <%= f.select :status, ServiceRequest::STATUS_TYPES %>
  </p>
  <p>
    <%= f.label :auth_cost %><br />
    <%= f.text_field :auth_cost %>
  </p>
  <p>
    <%= f.label :request_date %><br />
    <%= f.calendar_date_select :request_date %>
  </p>
  <p>
    <%= f.label :auth_date %><br />
    <%= f.calendar_date_select :auth_date %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @service_request %> |
<%= link_to 'Back', service_requests_path %>
