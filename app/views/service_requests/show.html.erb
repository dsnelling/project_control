<table class="show-table">
 <tr>
    <td class="show-table-label"><b>Project:</b></td>
    <td class="show-table-data"><%=h @service_request.project %></td>
  </tr>

  <tr>
    <td class="show-table-label"><b>Request ref:</b></td>
    <td class="show-table-data"><%=h @service_request.request_ref %></td>
  </tr>

  <tr>
    <td class="show-table-label"><b>Description:</b></td>
    <td class="show-table-data"><%=h @service_request.description %></td>
  </tr>

  <tr>
    <td class="show-table-label"><b>Disclipline:</b></td>
    <td class="show-table-data"><%=h @service_request.disclipline %></td>
  </tr>

  <tr>
    <td class="show-table-label"><b>Status:</b></td>
    <td class="show-table-data"><%=h @service_request.status %></td>
  </tr>

  <tr>
    <td class="show-table-label"><b>Auth cost:</b></td>
    <td class="show-table-data">RMB<%=h @service_request.auth_cost %></td>
  </tr>

  <tr>
    <td class="show-table-label"><b>Request date:</b></td>
    <td class="show-table-data"><%=h @service_request.request_date.strftime(
	  "%Y-%m-%d") if @service_request.request_date%></td>
  </tr>

  <tr>
    <td class="show-table-label"><b>Auth date:</b></td>
    <td class="show-table-data"><%=h @service_request.auth_date.strftime(
	  '%Y-%m-%d') if @service_request.auth_date  %>&nbsp;</td>
  </tr>
</table>
<br />
