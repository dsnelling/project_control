<h1>Project Management and Tracking System</h1>
<h2>Main Menu</h2>

<% if !session[:user_id] -%>
  <%= render :partial => "login" %>
<% else %>
<h3>Set Project</h3>
  <% form_tag set_project_path do %>
    <%= select_tag(:project,
	      options_for_select(@projects, session[:project]),
		  :onchange => 'this.form.submit()') %>
	<%= submit_tag "Set Project" %>
  <% end %>

<div id="main-menu">
  <h3>User actions:</h3>
  <ul>
    <li><%= link_to "Requisitions and Purchase Contracts",
       requisitions_path %></li>
    <li><%= link_to "Service Requests", :action => "index",
	   :controller => "service_requests" %></li>
    <li>Correspondance Logs</li>
    <li><%= link_to "Logout", "/logout" %></li>
  </ul>
  <h3>Administrative actions:</h3>
  <ul>
    <li><%= link_to "Set up Project Numbers", projects_path %></li>
    <li><%= link_to "Change Password", change_password_users_path %></li>
    <li><%= link_to "User Administration", users_path %></li>
    <li><%= link_to "Logout", "/logout" %></li>
    <li><%= link_to "About...", about_path %></li>
  </ul>
</div>
<% end %>

