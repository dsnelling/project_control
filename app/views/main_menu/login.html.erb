 <h1>Please log in:</h1>

 <% form_tag(:action => "login") do %>
	<table>
	  <tr>
	    <td><label for="username">Name:</label></td>
	    <td><%= text_field_tag "username" %></td>
	  </tr>
	  <tr>
	    <td><label for="password">Password:</td>
		<td><%= password_field_tag "password" %></td>
	  </tr>
	  <tr>
	    <td><%= submit_tag "Submit" %></td>
		<td>&nbsp;</td>
	  </tr>
	</table>
  <% end %>
