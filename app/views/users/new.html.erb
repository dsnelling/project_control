<h1>New User</h1>

<% form_for(@user) do |f| %>
  <%= f.error_messages %>

  <table>
   <tr>
     <td><%= f.label :username %></td>
     <td><%= f.text_field :username %></td>
   </tr>
   <tr>
     <td><%= f.label :password %></td>
	 <td><%= f.password_field :password %></td>
   </tr>
    <tr>
     <td><%= f.label :password_confirmation %></td>
	 <td><%= f.password_field :password_confirmation %></td>
   </tr>
   <tr>
     <td><%= f.label :forename %></td>
     <td><%= f.text_field :forename %></td>
   </tr>
   <tr>
     <td><%= f.label :surname %></td>
     <td><%= f.text_field :surname %></td>
   </tr>
   <tr>
     <td><%= f.label :email_addr %></td>
     <td><%= f.text_field :email_addr %></td>
   </tr>
   <tr>
     <td><%= f.label :company %></td>
     <td><%= f.text_field :company %></td>
   </tr>
   <tr>
     <td><%= f.label :disabled %></td>
     <td><%= f.check_box :disabled %></td>
   </tr>
   <tr>
     <td><%= f.submit 'Create' %></td>
	 <td>&nbsp;</td>
   </tr>
  </table>

<% end %>

<%= link_to 'Back', users_path %>







