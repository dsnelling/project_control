  <tr class="line-list-odd">
    <td class="list-cell"><%=h procurement_doc.category %></td>
    <td class="list-cell"><%=h procurement_doc.source %></td>
    <td class="list-cell"><%= link_to (image_tag("attachment.gif"),
	  procurement_doc.proc_document_url) \
	  if (procurement_doc.proc_document_url && @view_doc) %>
	  &nbsp;</td>
    <td class="list-cell"><%=h truncate(procurement_doc.remarks,
	   :length => 30) %></td>
    <td class="list-cell"><%= link_to t('show'),
	   requisition_procurement_doc_path(procurement_doc.requisition,
	   procurement_doc) %> |
    <%= link_to t('edit'),
	   edit_requisition_procurement_doc_path(procurement_doc.requisition,
	   procurement_doc) %> |
    <%= link_to t('destroy'),
	   requisition_procurement_doc_path(procurement_doc.requisition,
	   procurement_doc), :confirm => t('confirm'),
	   :method => :delete %></td>
  </tr>
