<h1>Editing comment</h1>

<%= error_messages_for :comment %>

<% form_for([@requisition,@req_comment]) do |f| %>
  <p>
    <b>Comment</b><br />
    <%= f.text_area :comment %>
  </p>

  <p>
    <b>Requsition</b><br />
    <%= f.text_field :requisition_id %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Back', requisition_path(@requisition) %>
